<div data-field="time" class="event__editable">
    <span class="event__time event__hide-on-edit" title="Кликни для редактирования">
        {{formattedDate}}
    </span>
    <input type="time" class="event__time-input event__show-on-edit" value="{{formattedDate}}"/>
</div>

<div data-field="title" class="event__editable">
    {{#if title}}
    <span class="event__title event__hide-on-edit" title="Кликни для редактирования">
        {{title}}
    </span>
    {{else}}
    <span class="event__title event__empty-field event__hide-on-edit" title="Кликни для редактирования">
        Тема лекции
    </span>
    {{/if}}
    <input type="text" class="event__title-input event__show-on-edit" placeholder="Тема лекции" value="{{title}}"/>
</div>

<div data-field="lecturer" class="event__editable">
    {{#if lecturer}}
    <span class="event__lecturer event__hide-on-edit" title="Кликните для редактирования">
        {{lecturer}}
    </span>
    {{else}}
    <span class="event__lecturer event__empty-field event__hide-on-edit" title="Кликните для редактирования">
        Кто читает?
    </span>
    {{/if}}
    <input type="text" class="event__lecturer-input event__show-on-edit" placeholder="Кто читает?" value="{{lecturer}}"/>
</div>

<div class="event__delete_button">&nbsp;</div>